<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>

        <item name="primary">@color/primary</item>
        <item name="primaryDark">@color/primaryDark</item>
        <item name="accent">@color/accent</item>
        <item name="accentPressed">@color/accentPressed</item>
        <item name="fragmentBackground">@color/background</item>
        <item name="chromecastSheetBackground">@color/chromecastBottomSheetBackground</item>
        <item name="blackTransparent">@color/blackSemiTransparent</item>
        <item name="iconColor">@color/iconColor</item>

        <item name="toolbarBackground">@color/primaryDark</item>
        <item name="light">false</item>

        <item name="textColor">@color/white</item>
        <item name="toolbarTextColor">@color/white</item>
        <item name="tabTitleTextColor">@color/white</item>
        <item name="cardTextColor">@color/cardTextColor</item>
        <item name="dialogTextColor">@color/dialogTextColor</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/lightAccent</item>
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/lightPrimaryDark</item>

        <item name="primary">@color/lightPrimary</item>
        <item name="primaryDark">@color/lightPrimaryDark</item>
        <item name="accent">@color/lightAccent</item>
        <item name="accentPressed">@color/lightAccentPressed</item>
        <item name="fragmentBackground">@color/lightBackground</item>
        <item name="chromecastSheetBackground">@color/lightChromecastBottomSheetBackground</item>
        <item name="blackTransparent">@color/blackSemiTransparent</item>
        <item name="iconColor">@color/lightIconColor</item>

        <item name="toolbarBackground">@color/white</item>
        <item name="light">true</item>

        <item name="textColor">@color/black</item>
        <item name="toolbarTextColor">@color/black</item>
        <item name="tabTitleTextColor">@color/lightCardTextColor</item>
        <item name="cardTextColor">@color/cardTextColor</item>
        <item name="dialogTextColor">@color/lightDialogTextColor</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:colorBackground">?toolbarBackground</item>
        <item name="android:textColor">?toolbarTextColor</item>
        <item name="android:textColorPrimary">?toolbarTextColor</item>
        <item name="isLightTheme">?light</item>
        <item name="android:textColorSecondary">?toolbarTextColor</item>
    </style>


</resources>
